@model OnlineShope.Models.Products;
@{
    ViewData["Title"] = "Product Delete";
}

<br />
<h2 class="text-info">Update Product</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">

    <div class="p-3 rounded border row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly class="form-control" />
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" readonly class="form-control" />
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="ProductColor"></span>
            </div>
           @*  <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Img"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Img" class="form-control" type="file" name="Image" />
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="Img"></span>
            </div> *@
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    <select asp-items="ViewBag.productTypeId" asp-for="ProductTypeId" disabled class="form-control"></select>
                    @*  <input asp-for="ProductTypeId" class="form-control" /> *@
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="ProductTypeId"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpacialTagId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="SpacialTagId" asp-items="ViewBag.SpacialTagId" disabled class="form-control"></select>
                    @* <input asp-for="SpacialTagId" class="form-control" /> *@
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="SpacialTagId"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Available"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Available" class="" disabled type="checkbox" />
                </div>
                <br /><br />
                <span class="text-danger" asp-validation-for="Available"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Delete" />
                <a class="btn btn-primary" asp-action="Index"> Back List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Img" width="100%" />
        </div>

    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
