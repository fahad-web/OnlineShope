@model OnlineShope.Models.ProductType;
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Cteate Product Type</h2>
<form asp-action="Delete" method="post">

    <div class="p-3 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductTypes" readonly class="form-control" />
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Price" readonly class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-danger" type="submit" value="Delete" />
            <a class="btn btn-primary" asp-action="Index"> Back List</a>


        </div>

    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

