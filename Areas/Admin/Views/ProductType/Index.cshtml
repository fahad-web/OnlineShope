@model IEnumerable<OnlineShope.Models.ProductType>
@{
    ViewData["Title"] = "Product Page";
}
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">
            Product Type List
        </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fa-sharp fa-regular fa-plus"></i> New Product List</a>
    </div>

</div>
<br />
<div >
    <table class="table table-info border-1">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(c => c.ProductTypes)</th>
            <th>@Html.DisplayNameFor(c => c.Price)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductTypes</td>
                <td>@item.Price</td>
                <td>
                    <partial name="_ButtonPartial" model="@item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>