@model IEnumerable<OnlineShope.Models.ProductType>
@{
    ViewData["Title"] = "Product Page";
}
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">
            Product Type List
        </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fa-sharp fa-regular fa-plus"></i> New Product List</a>
    </div>

</div>
<br />
<div >
    <table class="table table-info border-1">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(c => c.ProductTypes)</th>
            <th>@Html.DisplayNameFor(c => c.Price)</th>
            <th></th>
            <th>Feature List</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductTypes</td>
                <td>@item.Price</td>
                <td>
                    <partial name="_ButtonPartial" model="@item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts {
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    <script type="text/javascript">
        $(function () {
            var Save = "@TempData["save"]";
            if (Save != '') {
                alertify.success(Save);
            }

            var Delete = "@TempData["delete"]";
            if (Delete != '') {
                alertify.success(Delete);
            }

            var Update = "@TempData["update"]";
            if (Update != '') {
                alertify.success(Update);
            }
        })
    </script>
}